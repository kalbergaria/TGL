{
    "tasks": [

        // UNIX and Mac Build Task
        {
            "label": "UNIX/Mac Build",
            "type": "shell",
            "command": "/usr/bin/make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },

        // UNIX and Mac Clean Task
        {
            "label": "UNIX/Mac Clean",
            "type": "shell",
            "command": "/usr/bin/make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}